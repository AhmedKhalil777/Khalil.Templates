{
  "$schema": "http://json.schemastore.org/template",
  "author": "Khalil Templates",
  "classifications": ["Web", "API", "EF Core"],
  "identity": "Khalil.Templates.APISqlKhalil",
  "name": "Khalil SQL API Template",
  "shortName": "apisqlkhalil",
  "description": "A .NET 8 Web API template with Entity Framework Core for simple Todo list CRUD operations",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "APISqlKhalil",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        }
      ],
      "defaultValue": "net8.0"
    },
    "UseLocalDB": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to use LocalDB or SQL Server Express"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/.vs/**",
            "**/.vscode/**"
          ]
        }
      ]
    }
  ]
} 